<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="$lang$" xml:lang="$lang$"$if(dir)$ dir="$dir$"$endif$>
[@include htmlhead.htmli@]
<body>
$for(include-before)$
$include-before$
$endfor$

[@include navigationbar.htmli@]

<div id="main-wrapper">
$if(sx.title)$
<header id="title-block-header">
<h1 class="title">$sx.title$</h1>
$if(sx.subtitle)$
<p class="subtitle">$sx.subtitle$</p>
$endif$
$for(sx.author)$
<p class="author">$sx.author$</p>
$endfor$
$if(sx.date)$
<p class="date">$sx.date$</p>
$endif$
</header>
$endif$
$if(toc)$
<nav id="$idprefix$TOC">
$table-of-contents$
</nav>
$endif$
<main>
$body$

$if(sx.news-activeitems)$
$for(sx.news-activeitems)$
<a href="$sx.news-activeitems.link$">$sx.news-activeitems.title$</a><br>
$endfor$
$endif$
</main>
</div>
$for(include-after)$
$include-after$
$endfor$
</body>
</html>

