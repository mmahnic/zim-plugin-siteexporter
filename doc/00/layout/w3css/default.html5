<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"$if(lang)$lang="$lang$" xml:lang="$lang$"$endif$$if(dir)$ dir="$dir$"$endif$>
[@include htmlhead.htmli@]
<body class="w3-content w3-left" style="max-width:42em">
<div class="w3-panel w3-white">&nbsp;</div>
$for(include-before)$
$include-before$
$endfor$

[@include navigationbar.htmli@]

<div id="main-wrapper" class="w3-container">
$if(sx.title)$
<header id="title-block-header">
<h1 class="title">$sx.title$</h1>
$if(sx.subtitle)$
<p class="subtitle">$sx.subtitle$</p>
$endif$
$for(sx.author)$
<p class="author">$sx.author$</p>
$endfor$
$if(sx.date)$
<p class="date">$sx.date$</p>
$endif$
</header>
$endif$
$if(toc)$
<nav id="$idprefix$TOC">
$table-of-contents$
</nav>
$endif$
<main>
$body$
</main>
</div>
$for(include-after)$
$include-after$
$endfor$
</body>
</html>

