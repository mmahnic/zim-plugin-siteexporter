<div class="w3-top">
<div class="w3-bar w3-black">
<nav>
$if(navindex)$
$if(home)$
   <a href="$home$" class="w3-bar-item w3-button w3-blue w3-hide-small">&#x2302;</a>
$endif$
$for(navindex)$
$if(navindex.items)$
   <div class="w3-dropdown-hover">
      <button class="w3-button w3-black w3-hide-small nav-dropdown">$navindex.display$</button>
      <div class="w3-dropdown-content w3-bar-block w3-dark-grey">
         <a href="$navindex.link$" class="w3-bar-item w3-button w3-hide-small">$navindex.display$</a>
$for(navindex.items)$
           <a href="$navindex.items.link$" class="w3-bar-item w3-button w3-hide-small nav-level1">$navindex.items.display$</a>
$if(navindex.items.items)$
$for(navindex.items.items)$
             <a href="$navindex.items.items.link$" class="w3-bar-item w3-button w3-hide-small nav-level2">$navindex.items.items.display$</a>
$endfor$
$endif$
$endfor$
      </div>
   </div>
$else$
   <a href="$navindex.link$" class="w3-bar-item w3-button w3-hide-small">$navindex.display$</a>
$endif$
$endfor$
$endif$
$if(home)$
   <a href="$home$" class="w3-bar-item w3-button w3-blue w3-hide-medium w3-hide-large">&#x2302;</a>
$endif$
   <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-medium w3-hide-large" onclick="displayBurgerMenu()">&#9776;</a>
</nav>
</div>
</div>

<div id="demo" class="w3-bar-block w3-black w3-hide w3-hide-large w3-hide-medium">
$if(navindex)$
$for(navindex)$
   <a href="$navindex.link$" class="w3-bar-item w3-button">$navindex.display$</a>
$if(navindex.items)$
$for(navindex.items)$
     <a href="$navindex.items.link$" class="w3-bar-item w3-button nav-level1">$navindex.items.display$</a>
$if(navindex.items.items)$
$for(navindex.items.items)$
       <a href="$navindex.items.items.link$" class="w3-bar-item w3-button nav-level2">$navindex.items.items.display$</a>
$endfor$
$endif$
$endfor$
$endif$
$endfor$
<script>
function displayBurgerMenu() {
    var x = document.getElementById("demo");
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
    } else { 
        x.className = x.className.replace(" w3-show", "");
    }
}
</script>
$endif$
</div>
